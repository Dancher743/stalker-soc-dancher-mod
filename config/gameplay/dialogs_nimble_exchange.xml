<?xml version="1.0" encoding="windows-1251" ?>
<game_dialogs>

	<!-- Диалог после спасения и до возвращения из ТД -->
	<dialog id="nimble_exchange_dialog_before_sleep">
        <has_info>tutorial_wounded_help</has_info>
		<dont_has_info>esc_return</dont_has_info>
		<phrase_list>
            <phrase id="0">
                <text>nimble_exchange_dialog_after_safe_0</text>
                <next>1</next>
            </phrase>
			<phrase id="1">
                <text>nimble_exchange_dialog_after_safe_1</text>
				<next>2</next>
            </phrase>
			<phrase id="2">
                <text>nimble_exchange_dialog_after_safe_2</text>
            </phrase>
			
        </phrase_list>
    </dialog>

	<!-- Диалог после возвращения из ТД -->
	<dialog id="nimble_exchange_dialog_after_sleep">
		<has_info>tutorial_wounded_help</has_info>
		<has_info>esc_return</has_info>
        <phrase_list>
			<phrase id="0">
                <text>nimble_exchange_dialog_0</text>
				<next>1</next>
				<next>9</next>
            </phrase>
			<phrase id="1">
				<precondition>nimble_exchanger.check_not_out_of_stock</precondition>
                <text>nimble_exchange_dialog_1</text>
                <next>2</next>
				<next>3</next>
				<next>4</next>
				<next>5</next>
				<next>7</next>
			</phrase>
			<phrase id="2">
				<dont_has_info>nimble_exchange_wpn_hpsa</dont_has_info>
				<precondition>nimble_exchanger.check_actor_hpsa_fund</precondition>
                <text>nimble_exchange_dialog_2</text>
				<action>nimble_exchanger.exchange_hpsa</action>
				<give_info>nimble_exchange_wpn_hpsa</give_info>
				<next>6</next>
            </phrase>
			<phrase id="3">
				<dont_has_info>nimble_exchange_wpn_sig_m1</dont_has_info>
				<precondition>nimble_exchanger.check_actor_sig_fund</precondition>
                <text>nimble_exchange_dialog_3</text>
				<action>nimble_exchanger.exchange_sig</action>
				<give_info>nimble_exchange_wpn_sig_m1</give_info>
				<next>6</next>
            </phrase>
			<phrase id="4">
				<dont_has_info>nimble_exchange_wpn_svd_m1</dont_has_info>
				<precondition>nimble_exchanger.check_actor_svd_fund</precondition>
                <text>nimble_exchange_dialog_4</text>
				<action>nimble_exchanger.exchange_svd</action>
				<give_info>nimble_exchange_wpn_svd_m1</give_info>
				<next>6</next>
            </phrase>
			<phrase id="5">
				<dont_has_info>nimble_exchange_wpn_rg6_m1</dont_has_info>
				<precondition>nimble_exchanger.check_actor_rg6_fund</precondition>
                <text>nimble_exchange_dialog_5</text>
				<action>nimble_exchanger.exchange_rg6</action>
				<give_info>nimble_exchange_wpn_rg6_m1</give_info>
				<next>6</next>
            </phrase>
			<phrase id="6">
                <text>nimble_exchange_dialog_6</text>
            </phrase>
			<phrase id="7">
                <text>nimble_exchange_dialog_7</text>
				<next>8</next>
            </phrase>
			<phrase id="8">
                <text>nimble_exchange_dialog_8</text>
            </phrase>
			<phrase id="9">
				<precondition>nimble_exchanger.check_out_of_stock</precondition>
                <text>nimble_exchange_dialog_9</text>
            </phrase>
        </phrase_list>
    </dialog>
</game_dialogs>