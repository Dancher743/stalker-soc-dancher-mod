-- Включен ли выброс в игре
surge_enabled = true

-- Включен ли спавн артефактов после выброса
surge_spawn_arts_enabled = true

-- Через сколько часов после начала игры начнется выброс
t_start = 20

-- Периодичность выброса в игровых часах.
t_surge = 24

-- Периодичность выброса в игровых днях.
-- Если оба значения 1, то выброс будет стабильно каждые t_surge часов.
-- Нельзя ставить 0.
t_surge_days_add_min = 1
t_surge_days_add_max = 3

-- Дополнительные случайные игровые часы к периодичности выброса.
-- Если оба значения 0, то выброс будет стабильно каждые t_surge часов.
t_surge_add_min = -8
t_surge_add_max = 8

-- Включен ли пропуск выброса сном
surge_skip_by_sleep = true